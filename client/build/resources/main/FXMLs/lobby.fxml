                    mnemonicParsing="false" prefHeight="69.0" prefWidth="290.0"
                    style="-fx-background-color: #cc000f; -fx-text-fill: #ffffff;" text="Play">
                <effect>
                    <InnerShadow blurType="GAUSSIAN"/>
                </effect>
            </Button>
        </VBox>
        <ChatComponent fx:id="chat" layoutX="10.0" layoutY="10.0" maxHeight="1.7976931348623157E308"
                       maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="417.0"
                       stylesheets="@Style/style.css" HBox.hgrow="ALWAYS"/>
    </HBox>
</AnchorPane>
