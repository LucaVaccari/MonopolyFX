                               preserveRatio="true" HBox.hgrow="ALWAYS">
                        <image>
                            <Image url="@../images/pawns/car.png"/>
                        </image>
                    </ImageView>
                    <ImageView fx:id="shoePawn" fitHeight="74.0" fitWidth="53.0" pickOnBounds="true"
                               preserveRatio="true" HBox.hgrow="ALWAYS">
                        <image>
                            <Image url="@../images/pawns/shoe.png"/>
                        </image>
                    </ImageView>
                    <ImageView fx:id="boatPawn" fitHeight="69.0" fitWidth="52.0" pickOnBounds="true"
                               preserveRatio="true" HBox.hgrow="ALWAYS">
                        <image>
                            <Image url="@../images/pawns/boat.png"/>
                        </image>
                    </ImageView>
                </HBox>
                <Button fx:id="chooseButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="169.0"
                        styleClass="MainMenuButton" text="scegli" VBox.vgrow="ALWAYS">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
            </VBox>
            <VBox fx:id="playerListView" alignment="CENTER" maxHeight="385.0" maxWidth="1.7976931348623157E308"
                  prefHeight="385.0" prefWidth="303.0"/>
