<?xml version="1.0" encoding="UTF-8"?>

<?import it.castelli.gui.customComponents.ChatComponent?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0"
            prefWidth="600.0" style="-fx-background-color: #1f802c;" stylesheets="@Style/style.css"
            xmlns="http://javafx.com/javafx/16" fx:controller="it.castelli.gui.controllers.LobbyController">
    <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="267.0"
          prefWidth="600.0" stylesheets="@Style/style.css" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0"
              prefWidth="417.0" stylesheets="@Style/style.css" HBox.hgrow="ALWAYS">
            <VBox alignment="CENTER" prefHeight="85.0" prefWidth="290.0">
                <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      prefHeight="100.0" prefWidth="521.0" spacing="50.0" VBox.vgrow="ALWAYS">
                    <ImageView fx:id="thimblePawn" fitHeight="87.0" fitWidth="57.0" pickOnBounds="true"
                               preserveRatio="true" HBox.hgrow="ALWAYS">
                        <image>
                            <Image url="@../images/pawns/thimble.png"/>
                        </image>
                    </ImageView>
                    <ImageView fx:id="dogPawn" fitHeight="62.0" fitWidth="53.0" pickOnBounds="true"
                               preserveRatio="true" HBox.hgrow="ALWAYS">
                        <image>
                            <Image url="@../images/pawns/dog.png"/>
                        </image>
                    </ImageView>
                    <ImageView fx:id="wagonPawn" fitHeight="76.0" fitWidth="52.0" pickOnBounds="true"
                               preserveRatio="true" HBox.hgrow="ALWAYS">
                        <image>
                            <Image url="@../images/pawns/wagon.png"/>
                        </image>
                    </ImageView>
                </HBox>
                <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      prefHeight="100.0" prefWidth="200.0" spacing="50.0" VBox.vgrow="ALWAYS">
