<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="500.0" prefWidth="736.0" stylesheets="@Style/style.css" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.castelli.gui.controllers.ExchangeController">
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="10.0"
          AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="100.0"
              HBox.hgrow="ALWAYS">
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0"
                  prefWidth="200.0" VBox.vgrow="ALWAYS">
                <Label fx:id="yourTotalMoneyLabel" alignment="CENTER" contentDisplay="CENTER"
                       maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Total Money"
                       HBox.hgrow="ALWAYS"/>
                <Label fx:id="yourOfferLabel" alignment="CENTER" contentDisplay="CENTER"
                       maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Offer"
                       HBox.hgrow="ALWAYS"/>
            </HBox>
            <ListView maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="446.0"
                      prefWidth="358.0" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox layoutX="10.0" layoutY="10.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
            <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" text="SCAMBIO" VBox.vgrow="ALWAYS">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  prefHeight="100.0" prefWidth="200.0" spacing="50.0" VBox.vgrow="ALWAYS">
                <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      HBox.hgrow="ALWAYS">
                    <Label alignment="CENTER" maxHeight="50.0" maxWidth="1.7976931348623157E308" text="La tua scelta"
                           textAlignment="CENTER" VBox.vgrow="ALWAYS"/>
                    <ImageView fx:id="yourChoiceImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                               preserveRatio="true" VBox.vgrow="ALWAYS">
                        <Image url="@../images/face_0.png"/>
                    </ImageView>
                </VBox>
                <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      HBox.hgrow="ALWAYS">
                    <Label alignment="CENTER" maxHeight="50.0" maxWidth="1.7976931348623157E308" text="La sua scelta"
                           textAlignment="CENTER" VBox.vgrow="ALWAYS"/>
                    <ImageView fx:id="hisChoiceImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                               preserveRatio="true" VBox.vgrow="ALWAYS">
                        <Image url="@../images/face_0.png"/>
                    </ImageView>
                </VBox>
            </HBox>
            <Button fx:id="acceptButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                    maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="20.0" prefWidth="272.0"
                    text="Accetta" textAlignment="CENTER" VBox.vgrow="ALWAYS"/>
            <Button fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                    maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="20.0" text="Annulla"
                    textAlignment="CENTER" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox layoutX="10.0" layoutY="10.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0"
                  prefWidth="200.0" VBox.vgrow="ALWAYS">
                <Label fx:id="hisTotalMoneyLabel" alignment="CENTER" contentDisplay="CENTER"
                       maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Total Money"
                       HBox.hgrow="ALWAYS"/>
                <Label fx:id="hisOfferLabel" alignment="CENTER" contentDisplay="CENTER"
                       maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Offer"
                       HBox.hgrow="ALWAYS"/>
            </HBox>
            <ListView maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="446.0"
                      prefWidth="358.0" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>
</AnchorPane>
