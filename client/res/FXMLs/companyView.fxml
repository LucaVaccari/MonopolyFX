<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="343.0" prefWidth="213.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.castelli.gui.controllers.CompanyViewController">
    <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0"
          prefWidth="100.0" spacing="5.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <ImageView fx:id="companyImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true"
                   VBox.vgrow="ALWAYS"/>
        <Label fx:id="companyNameLabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
               maxWidth="1.7976931348623157E308" text="company name" textAlignment="CENTER" wrapText="true"
               VBox.vgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
               text="Se possiedi una sola compagnia, la rendita e' quattro volte l'ammontare uscito dai dadi"
               textAlignment="CENTER" wrapText="true" VBox.vgrow="ALWAYS"/>
        <Label layoutX="10.0" layoutY="177.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
               text="Se possiedi entrambe le compagnie, la rendita e' dieci volte l'ammontare uscito dai dadi"
               textAlignment="CENTER" wrapText="true" VBox.vgrow="ALWAYS"/>
        <HBox fx:id="onlyIfOwnedPane" alignment="CENTER" prefHeight="46.0" prefWidth="193.0" spacing="10.0"
              VBox.vgrow="ALWAYS">
            <Button fx:id="sellButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" text="Vendi" HBox.hgrow="ALWAYS"/>
            <Button fx:id="mortgageButton" layoutX="10.0" layoutY="10.0" maxHeight="1.7976931348623157E308"
                    maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Ipoteca" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>
</AnchorPane>
